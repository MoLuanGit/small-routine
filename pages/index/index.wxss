page{
  color:#666;
  padding:10rpx;
}

.nav_wrap{
  white-space: nowrap;
  padding:5rpx 0;
}

.nav_item{
  padding:20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}

.nav_item.active{
  border-bottom:3px solid #de688b;
}

.slides{
  margin-top:10rpx;
}
.slides swiper{
  height:220rpx;
  width:100%;
}
.slides navigator{
  width:100%;
  height:100%;
}
.slides image{
  width: 100%;
  height: 100%;
}
.video_wrap{
  display:flex;
  flex-wrap: wrap;
  padding:5rpx;
  justify-content: space-between;
}
.video_item{
  width:48%;
  margin-bottom: 20rpx;
}
.video_img{
  width:100%;
  position: relative;
}
.video_img image{
  width:100%;
}
.video_info{
  position: absolute;
  bottom: 80rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  z-index: 100;
  width:100%;
}
.video_info view{
  color:#fff;
  font-size: 30rpx;
}
.video_img .title{
  font-size: 28rpx;
  display: -webkit-box;
  white-space: normal;
  word-wrap: break-word;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  width:100%;
}